<form action="/user/register/{{quartoNumero}}" method="post">
     <div class="form-group">
    <label for="exampleInputEmail1">Nome</label>
    <input type="text" class="form-control" name="name"  placeholder="Seu Nome">
    
  </div>
  <div class="form-group">
   
    <label for="exampleInputEmail1">Numero de Telefone</label>
    <input type="number" class="form-control" name="number"  placeholder="Seu telefone">
    
  </div>
  <div class="form-group">
    <label for="exampleInputEmail1">Endereço de email</label>
    <input type="text" class="form-control" name="email" aria-describedby="emailHelp" placeholder="Seu email">
    <small id="emailHelp" class="form-text text-muted">Nunca vamos compartilhar seu email, com ninguém.</small>
  </div>
  
  <input type="submit" class="btn btn-primary" value="Enviar" >
</form>